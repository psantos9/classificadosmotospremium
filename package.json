{
  "name": "classificadosmotospremium",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "type-check": "npm run type-check --ws",
    "dev": "npm run dev:api & npm run dev:app",
    "dev:api": "npm run dev -w @cmp/api",
    "dev:app": "npm run dev -w @cmp/app",
    "dev:landing-page": "npm run dev -w landing-page",
    "build:app:preview": "npm run build:preview -w @cmp/app",
    "build:app": "npm run build -w @cmp/app",
    "migrations:generate": "npm run migrations:generate -w @cmp/shared",
    "migrations:commit:local": "npx wrangler d1 migrations apply cmp -c ./packages/api/wrangler.toml -e preview --local",
    "migrations:commit:preview": "npx wrangler d1 migrations apply cmp -c ./packages/api/wrangler.toml -e preview --remote"
  },
  "workspaces": [
    "./packages/*"
  ],
  "dependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@cloudflare/workers-types": "^4.20241216.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}
